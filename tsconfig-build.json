{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "declaration": true,
    "declarationDir": "./dist",
    "declarationMap": false,
    "allowSyntheticDefaultImports":true,
    "allowJs": true,
    "noEmit": true,
    "target": "ESNext",
    "importHelpers": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [ "./src/*" ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "example",
    "rollup.config.js",
    "src/__tests__",
    "src/setup*.js"
  ]
}
